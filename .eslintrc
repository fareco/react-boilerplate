{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "semi": ["error", "never"],
    "global-require": 0,
    "no-underscore-dangle": 0,
    "react/prop-types": 0,
    "no-console": 0,
    "max-len": [1, 120, 2, {
      "ignoreComments": true
    }],
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/anchor-is-valid": ["warn", {
      "aspects": ["invalidHref"]
    }],
    "comma-dangle": ["error", {
      "functions": "ignore"
    }],
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]
    }]
  },
  "env": {
    "browser": true,
    "node": true
  }
}
